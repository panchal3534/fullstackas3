<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Drive Test</title>
        <link rel="icon" type="image/x-icon" href="public/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>

        <!-- Page Header-->
        <%- include('layouts/header'); -%>

        <!-- Main Content -->
        <div class="form-container">
            <h2>G Test Lookup</h2>
            <p>Enter your License Number to check your G Test details.</p>
            
            <!-- Lookup Form -->
            <form id="lookup-form" action="/users/fetch" method="POST">
                <label for="licenceNumber">License Number</label>
                <input type="text" name="licenceNumber" id="licenceNumber" maxlength="8" required>
                
                <button type="submit" class="btn">Search</button>
            </form>
        </div>

        <% if (userFound) { %>
            <div id="user-info">
                <h3>User Information</h3>
                <p><strong>Name:</strong> <span><%= user.firstName %> <%= user.lastName %></span></p>
                <p><strong>License Number:</strong> <span><%= user.licenceNumber %></span></p>
                <p><strong>Age:</strong> <span><%= user.age %></span></p>
        
                <h4>Car Information</h4>
                <form id="update-form" action="/users/update" method="POST">
                    <input type="hidden" name="licenceNumber" id="update-licenceNumber" value="<%= user.licenceNumber %>">
        
                    <label for="make">Make</label>
                    <input type="text" name="make" id="make" value="<%= user.carDetails.make %>" required>
        
                    <label for="model">Model</label>
                    <input type="text" name="model" id="model" value="<%= user.carDetails.model %>" required>
        
                    <label for="year">Year</label>
                    <input type="number" name="year" id="year" value="<%= user.carDetails.year %>" required>
        
                    <label for="plateNumber">Plate Number</label>
                    <input type="text" name="plateNumber" id="plateNumber" value="<%= user.carDetails.plateNumber %>" required>
        
                    <button type="submit" class="btn">Update</button>
                </form>
            </div>
        <% } else { %>
            <div id="no-user">
                <p>No User Found</p>
                <a href="/g2test" class="btn">Go to G2 Page</a>
            </div>
        <% } %>
        

        <!-- Footer -->
        <%- include('layouts/footer'); -%>

        <!-- Scripts -->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
